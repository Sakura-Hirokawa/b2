<div class="container">
  <div clas="row">
    <h2>New Book</h2>
    <%= form_with model: @book, local:true do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :opinion %><br />
        <%= f.text_area :body %>
      </div>
      <div class="action">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
    <% end %>

    <h2>Books</h2>
      <div class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>profile_image</td>
              <td><%= book.name %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </div>
  </div>
</div>