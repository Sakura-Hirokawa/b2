<div class="container">
  <div clas="row">
    <h2>New Book</h2>
    <%= form_with model: @book, local:true do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :opinion %><br />
        <%= f.text_area :body %>
      </div>
      <div class="action">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>